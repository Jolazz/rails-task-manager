<div>
  <h1>My tasks</h1>
</div>
<div>
  <ul>
    <% @tasks.each do |task| %>
      <li>
        <%= link_to task.title, task_path(task) %>
        <%= link_to 'Remove',
                    task_path(task),
                    method: :delete,
                    data: { confirm: "Are you sure?" },
                    class: "btn btn-light"%>
      </li>
    <% end %>
  </ul>
</div>
<div class="link">
  <%= link_to "Add a task", new_task_path, class: "btn btn-primary"%>
</div>
